        <Label x:Name="lb_TextResult" Content="Результат:" HorizontalAlignment="Left" Margin="17,269,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Button x:Name="btn_Close" Content="Выйти" HorizontalAlignment="Left" Margin="410,359,0,0" VerticalAlignment="Top" FontSize="14" Height="29" Width="70" Click="btn_Close_Click"/>
        <TextBox x:Name="tb_Result" HorizontalAlignment="Left" Margin="112,277,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="368" FontSize="14" Height="72" IsReadOnly="True"/>

    </Grid>
</Window>
